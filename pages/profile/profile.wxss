/* pages/user/user.wxss */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.l-avatar {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}

.l-avatar-image {
  flex: 1;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background: #ccc;
  overflow: hidden
}

.l-avatar-text {
  display: inline-block;
  height: max-content;
  width: max-content;
  font-size: 28rpx;
  color: #45526b;
  line-height: 40px
}

.open-data {
  width: 100%;
  height: 100%
}

.l-avatar-text .l-avatar-text-text,
.l-avatar-text .open-data {
  font-size: inherit;
  color: inherit;
  line-height: inherit
}

.l-circle {
  border-radius: 50%
}

.l-placement-top .l-avatar-text {
  margin-bottom: 12rpx
}

.l-placement-bottom {
  flex-direction: column
}

.l-placement-bottom .l-avatar-text {
  margin-top: 12rpx
}


.tip {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 400rpx;
  height: 90rpx;
  background-color: whitesmoke;
  border-radius: 10px;
}

.tip-image {
  width: 40rpx;
  height: 40rpx;
}

.tip-text {
  color: #157658;
  font-size: 32rpx;
  margin-left: 20rpx;
}

.main {
  width: 100%;
  margin-top: 80rpx;
  box-shadow: 0 4rpx 20rpx 0 rgba(212, 217, 223, .5);
  border-radius: 4px
}

.main-text {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #999;
}

.share-button{
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
