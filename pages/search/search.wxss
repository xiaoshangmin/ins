.container {
  padding-bottom: 30rpx;
  margin-top: 20rpx;
}

.popover {
  border-radius: 6px;
  position: absolute;
  background-color: #FFF;
  width: 70px;
  min-height: 1rpx;
  margin: 10px auto;
  left: 20rpx;
  z-index: 99;
  box-shadow: 0 2px 12px rgb(50 50 51 / 12%);
}

.popover-arrow {
  position: absolute;
  width: 0;
  height: 0;
  border: 6px solid transparent;
  left: 16px;
  top: 0;
  transform: translate(-50%, -100%);
  border-bottom-color: #FFF;
}

.popover-content {
  overflow: hidden;
}

.item {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  font-size: 35rpx;
  height: 70rpx;
}

.hairline--bottom {
  position: relative;
}

.hairline--bottom::after {
  border-bottom-width: 1px;
  content: ' ';
  border: 0 solid #13141493;
  transform: scale(0.5);
  position: absolute;
  box-sizing: border-box;
  top: 50%;
}

.search-class {
  padding: 2rpx 12rpx !important;
}
 

.label {
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 600;
  font-size: 28rpx;
  padding-right: 30rpx;
}


.type {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}

.label::after {
  content: ' ';
  border-style: solid;
  border-width: 0 0 0 1rpx;
  border-color: #828283;
  border-image: none;
  position: relative;
  height: 30rpx;
  max-width: 1px;
  left: 10rpx;
}
 
.typename {
  margin-right: 10rpx;
}

.arrow {
  width: 0;
  height: 0;
  border: 6rpx solid transparent;
  border-top-color: black;
  transform: translateY(25%);
}
 
.list {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
}
 
.image {
  width: 31vw;
  height: 31vw;
}

.wallpaper {
  width: 31vw;
  height: 53vw;
}
