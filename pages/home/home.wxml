<!--pages/home/home.wxml-->
<view class="l-class card-container card-container-avatar card-container-avatar-left card-container-unfull"
    wx:for="{{list}}" wx:key="index">
    <view class="card-avatar-top">
        <view class="card-avatar-left" bindtap="toUser">
            <image mode="aspectFill" class="l-img-class card-img-avatar" src="{{item.userinfo.profile_pic_url}}"
                lazy-load>
            </image>
            <view class="card-avatar">
                <text class="l-title-class card-title card-title-avatar">{{item.userinfo.username}}</text>
                <text class="describe">{{item.create_time}}</text>
            </view>
        </view>
        <van-tag round color="#f3f3f3" text-color="#3963BC" size="large" plain>
            + 关注
        </van-tag>
    </view>
    <view class="avter-share-img">
        <swiper indicator-dots="{{item.dots}}" indicator-active-color="blue" style="height:{{item.dimensions.vw_height}}vw;max-height:125vw;">
            <swiper-item wx:for="{{item.urls}}" wx:for-index="idx" wx:for-item="url">
                <view class="swiper-item">
                    <block wx:if="{{0 == url.is_video}}">
                        <image lazy-load mode="widthFix" style="width:100vw;" src="{{url.display_url}}">
                        </image>
                    </block>
                    <block wx:elif="{{1 == url.is_video}}">
                        <video id="myVideo" src="{{url.video_url}}" binderror="videoErrorCallback"
                            show-center-play-btn='{{true}}' object-fit="cover" show-play-btn="{{true}}"
                            picture-in-picture-mode="{{['push', 'pop']}}" show-mute-btn poster="{{url.display_url}}"
                            controls muted show-fullscreen-btn="{{false}}" show-play-btn="{{false}}"
                            enable-play-gesture
                            bindenterpictureinpicture='bindVideoEnterPictureInPicture'
                            bindleavepictureinpicture='bindVideoLeavePictureInPicture'
                            style="width:100vw;height:{{item.dimensions.vw_height}}vw;max-height:125vw;"></video>
                    </block>
                </view>
            </swiper-item>
        </swiper>
    </view>
    <view class="avter-content">
        {{item.node_text}}
    </view>
